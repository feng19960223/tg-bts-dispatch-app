<resources>
    <!-- 主题样式 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- 启动样式 -->
    <style name="StartAppTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="TranslucentTheme" parent="StartAppTheme">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F0F0F0</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/dp_80</item>
        <item name="android:layout_height">@dimen/dp_80</item>
        <item name="android:layout_marginBottom">@dimen/dp_8</item>
    </style>

    <style name="num_blue">
        <item name="android:layout_width">@dimen/dp_24</item>
        <item name="android:layout_height">@dimen/dp_24</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:background">@drawable/bg_dialog_head_number_blue_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="tv_name">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:textColor">@color/c3</item>
    </style>

    <style name="tv_style_1">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_50</item>
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="tv_style_2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">#EDEFF4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_50</item>
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/sp_12</item>
    </style>

    <style name="tv_style_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#EDEFF4</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_50</item>
        <item name="android:textColor">@color/c1</item>
        <item name="android:textSize">@dimen/sp_11</item>
    </style>

    <style name="tv_style_4">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_14</item>
        <item name="android:background">@drawable/common_btn_blue_style</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
        <item name="android:paddingStart">@dimen/dp_15</item>
        <item name="android:paddingEnd">@dimen/dp_15</item>
        <item name="android:paddingTop">@dimen/dp_2</item>
        <item name="android:text">更换人员</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="tv_style_5">
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:paddingBottom">@dimen/dp_2</item>
        <item name="android:paddingStart">@dimen/dp_8</item>
        <item name="android:paddingEnd">@dimen/dp_8</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_5</item>
        <item name="android:textColor">@color/c3</item>
        <item name="android:background">@drawable/tv_bottom_bg2</item>
    </style>

    <style name="tv_style_10">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/common_btn_orange_style</item>
        <item name="android:paddingBottom">@dimen/dp_5</item>
        <item name="android:paddingStart">@dimen/dp_40</item>
        <item name="android:paddingEnd">@dimen/dp_40</item>
        <item name="android:paddingTop">@dimen/dp_5</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">@dimen/sp_16</item>
    </style>

    <style name="tv_style_7">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_40</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/dp_50</item>
        <item name="android:textColor">@color/c1</item>
    </style>

    <style name="tv_style_8">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/dp_8</item>
        <item name="android:textColor">@color/main</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>

    <style name="tv_style_9">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd">@dimen/dp_8</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/sub</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!--人名dialog style-->
    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0</item>
    </style>
    <!--人名dialog入场，出场动画-->
    <style name="dialogWindowAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
</resources>
