<?xml version="1.0" encoding="utf-8"?><!--故障详情页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <include layout="@layout/head_activity" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDiscoveryTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvTrainSetCodeNum"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvSystemType"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvDispatchTime"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvDispatchPlanStartTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_40"
                        android:background="#EDEFF4"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingStart="@dimen/dp_50">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="故障状态：" />

                        <TextView
                            android:id="@+id/tvHandlingResult"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvStartTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvQcRealname"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvQcFinishTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />
                </LinearLayout>

                <!--检修班组/派工详情/结束时间-->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvDiscovererRealname"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvCarriage"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvPattern"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvDispatchRealname"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvDispatchPlanFinishTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvHandlerRealname"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvFinishTime"
                        style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView
                        android:id="@+id/tvQcStartTime"
                        style="@style/tv_style_7"
                        android:background="#EDEFF4" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />

                    <TextView style="@style/tv_style_7" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:background="@color/line" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_50"
                        android:text="问题描述："
                        android:textColor="@color/c1" />

                    <TextView
                        android:id="@+id/tvDiscoveryDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_50"
                        android:textColor="@color/c1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_50"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_50"
                        android:text="处理描述："
                        android:textColor="@color/c1" />

                    <TextView
                        android:id="@+id/tvHandlingDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_50"
                        android:textColor="@color/c1" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_marginEnd="@dimen/dp_50"
                    android:layout_marginStart="@dimen/dp_50"
                    android:background="@color/line" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:orientation="horizontal"
                    android:paddingTop="@dimen/dp_4">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_50"
                        android:text="质检描述："
                        android:textColor="@color/c1" />

                    <TextView
                        android:id="@+id/tvQcDesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_50"
                        android:textColor="@color/c1" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_8" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>